# --- Server Configuration ---
PORT=8888
FRONTEND_URL=http://localhost:5500

# --- Database Connection (MySQL) ---
# For local Docker setup, use DB_HOST. For production with a socket, use DB_SOCKET_PATH.
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
# DB_SOCKET_PATH=/path/to/your/mysql.sock

# --- Admin Credentials ---
# Choose a secure username and password for the admin panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=a_very_secure_password

# --- JWT Secret ---
# A long, random string used to sign authentication tokens
JWT_SECRET=your_super_secret_jwt_string

# --- Spotify API Credentials ---
# Get these from your Spotify Developer Dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token

# --- Cron Job Security ---
# A secret key to protect the daily song selection endpoint
CRON_SECRET=a_secure_random_string_for_cron